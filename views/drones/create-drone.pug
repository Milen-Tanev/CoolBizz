extends ../_layout

block content
    .container
        .wrapper
        form.form-signin(action="/drone/create-drone" method="post" name="Create_Drone_Form")
            h3.form-signin-heading Create new drone
                br.colorgraph
                input.form-control.sign-in(type="text" name="name" placeholder="name" required="" autofocus="")
                input.form-control.sign-in(type="text" name="description" placeholder="description" required="")
                input.form-control.sign-in(type="text" name="serviceSupported" placeholder="serviceSupported" autofocus="")
                input.form-control.sign-in(type="text" name="pricePerDay" placeholder="pricePerDay" required="")
                input.form-control.sign-in(type="text" name="img" placeholder="img" autofocus="")
            button.btn.btn-lg.btn-primary.btn-block(type="submit" name="Submit" value="Login") Create