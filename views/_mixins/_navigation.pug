mixin mixin-navigation
    nav#custom-bootstrap-menu.navbar.navbar-default(role="navigation")
        .container-fluid.text-center
            .navbar-header.transparent
                button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-menubuilder")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand#home(href="/home")
                    img(src='static/img/logo.png' border='0')
            .navbar-menubuilder.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-left

                    li
                        a(href="/about-us") About us
                    li
                        a(href="/drones") Drones
                    li
                        a(href="/services") Services
                    if user
                        li.dropdown
                            a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                                = user.username
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/'+user._id)
                                        | View profile
                                li
                                    a(href='/hisotry/'+user._id)
                                        | Show purchase history
                                li
                                    form(action="/sign-out" method="post")
                                        button.signOut
                                            | Sign out
                    else
                        li.dropdown
                            a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                                | User
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href="/sign-up")
                                        | Sign up
                                li
                                    a(href="/sign-in")
                                        | Sign in
                form.navbar-form.pull-right(action="/search" method="get")
                    .input-group
                        input.form-control(type="text" placeholder="Search drone name" name="pattern")
                        .input-group-btn
                            button.btn.btn-default
                                span.glyphicon.glyphicon-search